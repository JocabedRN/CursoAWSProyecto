{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Base de datos de la app encuesta",
    "Metadata": {},
    "Parameters": {
        "userMasterBD": {
            "Type": "String",
            "Description": "Usuario ROOT BD",
            "NoEcho": true,
            "Default": "root"
        },
        "passwordMasterBD": {
            "Type": "String",
            "Description": "Password ROOT BD",
            "NoEcho": true
        },
        "tipoDeInstancia": {
            "Type": "String",
            "Default": "db.t2.micro"
        }
    },
    "Mappings": {},
    "Conditions": {},
    "Resources": {
        "dbSubnetGroup": {
            "Type": "AWS::RDS::DBSubnetGroup",
            "Properties": {
                "DBSubnetGroupDescription": "Agrupaci√≥n de las redes privadas de la VPC",
                "SubnetIds": [
                    {
                        "Fn::ImportValue": "infraestructura-subnetPrivada1c"
                    },
                    {
                        "Fn::ImportValue": "infraestructura-subnetPrivada1d"
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "SubnetGroupCF"
                    }
                ]
            }
        },
        "bdEncuesta": {
            "Type": "AWS::RDS::DBInstance",
            
            "Properties": {
                "DBName": "encuesta",
                "DBInstanceIdentifier" : "bdAppEncuesta",
                "BackupRetentionPeriod": "0",
                "AllocatedStorage": "20",
                "StorageType": "gp2",
                "DBInstanceClass": { "Ref": "tipoDeInstancia" },
                "MultiAZ": false,
                "Engine": "MySQL",
                "EngineVersion": "5.7.21",
                "MasterUsername": {
                    "Ref": "userMasterBD"
                },
                "MasterUserPassword": {
                    "Ref": "passwordMasterBD"
                },
                "DBSubnetGroupName": {
                    "Ref": "dbSubnetGroup"
                },
                "VPCSecurityGroups": [{
                    "Fn::ImportValue": "infraestructura-sgRDSEncuesta"
                }],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "Database Encuesta"
                    }
                ]
            },
            "DeletionPolicy" : "Delete"
        }
    },
    "Outputs": {
        "endpointRDS": {
            "Description": "endpoint para conexion a RDS",
            "Value": {
                "Fn::GetAtt": [
                    "bdEncuesta",
                    "Endpoint.Address"
                ]
            },
            "Export" : { "Name" : "basedatos-endpointRDS" }
        },
        "conexionBD": {
            "Description": "DNS y puerto para acceder a la base de datos",
            "Value": {
                "Fn::Join": [
                    "",
                    [
                        {
                            "Fn::GetAtt": [
                                "bdEncuesta",
                                "Endpoint.Address"
                            ]
                        },
                        ":",
                        {
                            "Fn::GetAtt": [
                                "bdEncuesta",
                                "Endpoint.Port"
                            ]
                        }
                    ]
                ]
            }
        }
    }
}